
import java.awt.EventQueue;

import javax.swing.JFrame;
import javax.swing.JLabel;
import java.awt.Font;
import javax.swing.JTabbedPane;
import javax.swing.JTable;
import javax.swing.JScrollPane;
import javax.swing.table.DefaultTableModel;

public class KuchBhi {

	private JFrame frame;
	private JTable table;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					KuchBhi window = new KuchBhi();
					window.frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the application.
	 */
	public KuchBhi() {
		initialize();
	}

	/**
	 * Initialize the contents of the frame.
	 * @throws Exception 
	 */
	private void initialize() throws Exception {
		frame = new JFrame();
		frame.setBounds(100, 100, 1044, 686);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.getContentPane().setLayout(null);
		
		JLabel lblMaterials = new JLabel("Materials");
		lblMaterials.setFont(new Font("Times New Roman", Font.BOLD | Font.ITALIC, 25));
		lblMaterials.setBounds(472, 13, 130, 62);
		frame.getContentPane().add(lblMaterials);
		
		JLabel lblNewLabel = new JLabel("Name");
		lblNewLabel.setFont(new Font("Tahoma", Font.BOLD, 18));
		lblNewLabel.setBounds(29, 106, 185, 35);
		frame.getContentPane().add(lblNewLabel);
		
		JLabel lblPrice = new JLabel("Price");
		lblPrice.setFont(new Font("Tahoma", Font.BOLD, 18));
		lblPrice.setBounds(225, 106, 185, 35);
		frame.getContentPane().add(lblPrice);
		
		JLabel lblUnit = new JLabel("Unit");
		lblUnit.setFont(new Font("Tahoma", Font.BOLD, 18));
		lblUnit.setBounds(427, 106, 185, 35);
		frame.getContentPane().add(lblUnit);
		
		JLabel lblQuantity = new JLabel("Quantity");
		lblQuantity.setFont(new Font("Tahoma", Font.BOLD, 18));
		lblQuantity.setBounds(624, 106, 185, 35);
		frame.getContentPane().add(lblQuantity);
		
		JLabel lblTotal = new JLabel("Total");
		lblTotal.setFont(new Font("Tahoma", Font.BOLD, 18));
		lblTotal.setBounds(821, 106, 185, 35);
		frame.getContentPane().add(lblTotal);
		
		
		String columnsName[] =  {"Name", "Price", "Unit", "Quantity", "Total"};
		
		table = new JTable();
		DefaultTableModel dt = new DefaultTableModel(new KuchBhiNaam().MaterialArray(),columnsName);
		table.setModel(dt);
		table.setBounds(12, 150, 1002, 476);
		table.setRowHeight(30);
		frame.getContentPane().add(table);
	}
}
